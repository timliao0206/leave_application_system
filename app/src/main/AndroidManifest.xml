<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leave_application_system">

    <application
        android:name=".GlobalVariable"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity"
            android:parentActivityName=".MainActivity">

        </activity>

        <activity android:name=".ProposeLeaveActivity"
            android:parentActivityName=".CenterActivityForStudent">


        </activity>

        <activity android:name=".RequestingActivity"
            android:parentActivityName=".CenterActivityForStudent">

        </activity>

        <activity android:name=".ClassTimeActivity"
            android:parentActivityName=".CenterActivityForStudent">

        </activity>

        <activity android:name=".ProposeLeaveActivity2"
            android:parentActivityName=".ProposeLeaveActivity">

        </activity>

        <activity android:name=".LeaveApplicationTeacher"
            android:parentActivityName=".CenterActivityForTeacher">

        </activity>

        <activity android:name=".CenterActivityForStudent"
            android:parentActivityName=".MainActivity">

        </activity>

        <activity android:name=".CenterActivityForTeacher"
            android:parentActivityName=".MainActivity">

        </activity>

        <activity android:name=".Calendar"
            android:parentActivityName=".CenterActivityForStudent">

        </activity>

        <activity android:name=".ClassSchedule"
            android:parentActivityName=".PersonalHub">

        </activity>

        <activity android:name=".Announcement"
            android:parentActivityName=".CenterActivityForStudent">

        </activity>
        <activity android:name=".PersonalHub"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity android:name=".PersonalProfile"
            android:parentActivityName=".PersonalHub">

        </activity>

        <activity android:name=".HubToRollCall"
            android:parentActivityName=".PersonalHub"
            android:noHistory="false"></activity>

        <activity android:name=".RollCall"
            android:parentActivityName=".HubToRollCall"
            android:noHistory="false"></activity>

    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera"
        android:required="false" />

</manifest>